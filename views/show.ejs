<% include partials/header %>
<h1><%= blog.title%></h1>
<p><%= blog.created.toDateString() %></p>
<div class="ui container" style="height:360px;width:480px">
<img style="height:100%;width:100%" class="ui big centered image bordered" src="<%= blog.image%>">
</div>
<p><%= blog.body%></p>
 <form action="/blogs/<%=blog._id%>/edit" style="display:inline;">
     <button class="ui purple basic button">Update</button>
 </form>
  <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" style="display:inline;">
     <button class="ui red basic button">Delete</button>
 </form>
<% include partials/footer %>