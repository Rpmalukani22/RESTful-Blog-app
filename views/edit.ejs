<% include partials/header %>
<div class="ui container" id="formbox">
<div class="ui segment">
   <!--<%= console.log("/blogs/"+currentBlog._id+"?_method=PUT"); %>-->
 <form action="/blogs/<%=currentBlog._id%>?_method=PUT" method='POST'>
     <div class="ui form">
  <div class="field">
    <label>Title :</label>
    <input type="text" name="updatedBlog[title]" value="<%= currentBlog.title%>">
  </div>
</div>
<div class="ui form">
  <div class="field">
    <label>Image URL :</label>
    <input type="text" name="updatedBlog[image]" value="<%= currentBlog.image%>">
  </div>
</div>
     <div class="ui form">
  <div class="field">
    <label>Description :</label>
    <textarea name="updatedBlog[body]"><%= currentBlog.body%></textarea>
  </div>
  <div>
      <button class="ui primary basic button fluid">Submit!</button>
  </div>
</div>
 </form>
</div>
<% include partials/footer %>